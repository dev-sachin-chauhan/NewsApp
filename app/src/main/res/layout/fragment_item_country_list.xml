<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/locale_heading"
        android:layout_width="match_parent"
        android:text="Select Your Country"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_height="40dp"
        android:background="#d20a43"/>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/locale_heading"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/locale_list"
        android:name="com.allinmyapp.news.LocaleFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.allinmyapp.news.LocaleFragment"
        tools:listitem="@layout/fragment_country_item" />

</RelativeLayout>